<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:HTMLPanel ui:field="htmlPanel">
		<!-- Main content panel -->
		<g:HorizontalPanel ui:field="mainPanel" styleName="mainPage" addStyleNames="limitWidth" horizontalAlignment="center">
			<!-- Actual content -->
			<g:VerticalPanel ui:field="pagePanel" width="60%">
				<!-- Section title -->
				<g:HTMLPanel ui:field="titlePanel" styleName="sectionTitle">
					<g:Label ui:field="subtitleLabel" styleName="sectionTitleH3">Chapter 1</g:Label>
					<g:Label ui:field="titleLabel" styleName="sectionTitleH2">Loading...</g:Label>
				</g:HTMLPanel>
				
				<!-- Page content -->
				<g:HTMLPanel ui:field="contentPanel">
				</g:HTMLPanel>
				
				<!-- Nav buttons at bottom -->
	    		<g:HorizontalPanel ui:field="buttonPanel" spacing="10">
			    	<g:Button ui:field="prevButton" styleName="prev">Prev: Introduction</g:Button>
			    	<g:Button ui:field="nextButton" styleName="next">Next: Chapter X</g:Button>
	    		</g:HorizontalPanel>
			</g:VerticalPanel>
			<g:VerticalPanel ui:field="spacerPanel" width="30%" height="100%" visible="false">
			</g:VerticalPanel>
   		</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 