/** Base (most-commonly used) font that can be modified as needed */
.mainFont {
	font-family: 'Oswald', sans-serif;
	color: #818181;
	font-size: 12pt;
    letter-spacing: 1px;
	font-weight: 400;
	text-align: center;
}

.subtitleFont {
	font-family: 'Times New Roman', Georgia, Serif;
	font-size: 11pt;
	color: #444444;
}

.bigTitle {
	font-size: 26pt;
	font-weight: 400;
	text-align: left;
	color: #FFFFFF;
}

/** Standard colors across system */
.tealColor { color: #426b9c; }
.orangeColor { color: #cf7a34; }
.redColor {	color: #892629; }
.blackColor { color: #000000; }
.greyColor { color: #666666; }
.whiteColor { color: #FFFFFF; }

.tealBackground { background-color: #426b9c; }
.orangeBackground { background-color: #cf7a34; }
.redBackground { background-color: #892629; }
.blackBackground { background-color: #000000; }
.greyBackground { background-color: #666666; }
.whiteBackground { background-color: #FFFFFF; }

/** Main-page features */
.background {
	background-image: url("background-pattern.png");
}

.header {
	width: 100%;
	margin: 0px 0px 0px 0px;
	background-color: #FFFFFF;
}
 
.navBar {
	width: 100%;
	margin: 0px 0px 0px 0px;
	background-color: #CCCCCC;
}

.navBarButton {
    background: #CCCCCC;
    color: #444444;
	font-family: 'Oswald', sans-serif;
    font-size: 15px;
	font-weight: 400;
    letter-spacing: 1px;
    padding-left: 15px;
    padding-right: 15px;
    height: 40px;
    /* width: 160px; */
    margin: 0px 0px;
    text-align: center;
    border: 0;
    transition: all 0.3s ease 0s;
}

.navBarButton:hover {
	background: #426B9C;
	color: #FFFFFF;
}

.mainPage {
	width: 94%;
	background-color: #FFFFFF;
	margin: 60px 3% 20px 3%;
    box-shadow: 0px 4px 25px #222222;
}

/** Example rules used by the template application (remove for your app) */
h1 {
	font-size: 2em;
	font-weight: bold;
	color: #777777;
	margin: 40px 0px 70px;
	text-align: center;
}

.sendButton {
	display: block;
	font-size: 16pt;
}

/** Most GWT widgets already have a style name defined */
.gwt-DialogBox {
	width: 400px;
}

.dialogVPanel {
	margin: 0px;
}

.serverResponseLabelError {
	color: red;
}

/** Set ids using widget.getElement().setId("idOfElement") */
#closeButton {
	margin: 15px 6px 6px;
}
