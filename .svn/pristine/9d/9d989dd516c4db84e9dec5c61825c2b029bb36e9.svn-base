	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	
	<g:HTMLPanel>
		<!-- Header bar -->
    	<g:VerticalPanel styleName="header">
    		<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" spacing="24">
    			<g:Label>   </g:Label>
