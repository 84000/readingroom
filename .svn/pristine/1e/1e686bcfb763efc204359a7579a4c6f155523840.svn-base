.sectionControls {
	font-family: 'Trade Gothic W02 Roman';
	/* font-family: "Arial", Serif; */
	font-size: 14px;
	/* text-align: left; */
	color: #cf7a34;
    background: Transparent;
	line-height: 1.5em;
	outline-style: none;
	text-transform: uppercase;
}

.sectionControls:hover {
	cursor: pointer;
}

.sectionSummary {
	font-family: "Georgia", Serif;
	font-size: 11pt;
	text-align: left;
	color: #888888;
    background: Transparent;
	line-height: 1.5em;
	margin: 8px 5px 0px 5px;
}

.filterButton {
	margin: 0px;
	padding: 8px 20px 8px 20px;
	font-family: 'Trade Gothic W02 Roman';
	/* font-family: Arial,Helvetica,sans-serif; */
    font-size: 12px;
    text-align: center;
	background-color: Transparent;
	color: #cf7a34;
    border: 1px solid #cf7a34;
	outline-style: none;
	border-radius: 0px 6px 6px 0px;
	min-width: 10.0em;
	text-transform: uppercase;
}

.filterButtonSelected {
	background-color: #cf7a34;
	color: #FFFFFF;
}

.filterButtonLeft { border-radius: 6px 0px 0px 6px; }
.filterButtonRight { border-radius: 0px 6px 6px 0px; }

.transNotBegunButton
{
	margin: 10px 8px 0px 8px;
	padding: 8px 15px 8px 15px;
	font-family: 'Trade Gothic W02 Roman';
	/* font-family: Arial,Helvetica,sans-serif; */
    font-size: 12px;
    text-align: left;
	background-color: transparent;
	color: #426b9c;
    border: 1px solid #426b9c;
	outline-style: none;
	border-radius: 6px;
	min-width: 14.0em;
	text-transform: uppercase;
}

.viewTransButton:hover {
	cursor: pointer;
}

.viewTransButton
{
	margin: 10px 8px 0px 8px;
	padding: 8px 15px 8px 15px;
	font-family: 'Trade Gothic W02 Roman';
	/* font-family: Arial,Helvetica,sans-serif; */
    font-size: 12px;
    text-align: left;
	background-color: #426b9c;
	color: #FFFFFF;
	border:none;
	outline-style: none;
	border-radius: 6px;
	min-width: 14.0em;
	text-transform: uppercase;
}

.viewTransButton:hover {
	cursor: pointer;
}

.originalTextButton
{
	margin: 4px 8px 0px 8px;
	padding: 8px 15px 8px 15px;
	font-family: 'Trade Gothic W02 Roman';
	/* font-family: Arial,Helvetica,sans-serif; */
    font-size: 12px;
    text-align: left;
	background-color: Transparent;
	color: #003f5f;
	border: none;
	border-bottom: 1px solid #003f5f;
	min-width: 14.0em;
	text-transform: uppercase;
}


