.contentText {
	font-family: Georgia,"Times New Roman",serif;
	color: #6d6d6d;
	font-size: 112.5%;
	line-height: 1.5em; /* 24/16 */
	margin-top: 0em;
	margin-bottom: 0em;
}

.contentTitle {
	font-style: italic;
}

/* Glossary links (widgets) */
.glossLink {
	/* color: #426b9c; */
	color: #003f5f; /* darker teal tones down the links */
	text-decoration: none;
	border-bottom: 1px dashed #b3c4d7;
	transition: .3s;
	cursor: pointer;
}
.glossLink:hover,
.glossLink:focus {
	color: #cf7a34;
	border-color: #eccaae;
}
.glossLink:active {
	color: #892629;
	border-color: #d0a8a9;
	transition: none;
}

/* Milestones */
.milestone {
	font-family: Arial,Helvetica,serif;
	display: inline-block;
	text-align: center;
	color: #b2b2b2;
	transition: none;
	font-size: .75em;
	margin: 0 0 0 -4em;
	padding: .25em;
	line-height: 0em;
	border-radius: .25em;
	cursor: pointer;
text-indent: 0;
z-index: 2;
}
.milestone:hover {
	color: #fff;
	background: #426b9c;
	line-height: 1.5em;
}
.milestone:hover:after {
	font-family: SSStandard;
	text-align: center;
	content: "\1F516"; /* bookmark symbol */
	color: #fff;
	background: #426b9c;
	display: block;
	width: 100%;
}

/* Prev & Next buttons for inter-text navigation */
.next {
  font: .75em/1.5em Arial,Helvetica,sans-serif; /* 12/16, 18/12 */
  line-height: 1em;
  text-transform: uppercase;
  letter-spacing: .075em;
  margin: 3em 0;
  
  display: inline-block;
  color: #fff;
  background: #426b9c;
  padding: 1em;
  border: none;
  border-radius: .5em;
}
.next:after {  
  content: " →";
}
.next:hover {
  background: #003f5f;
}

.prev {
  font: .75em/1.5em Arial,Helvetica,sans-serif; /* 12/16, 18/12 */
  line-height: 1em;
  text-transform: uppercase;
  letter-spacing: .075em;
  margin: 3em 0;
  
  display: inline-block;
  color: #fff;
  background: #426b9c;
  padding: 1em;
  border: none;
  border-radius: .5em;
}
.prev:before {
	content: "← ";
}
.prev:hover {
	background: #003f5f;
}

.glossary {
	font-family: Arial,Helvetica,sans-serif;
	font-weight: bold;
	color: #426b9c;
	display: inline;	
}

.glossPanel {
	padding-top: .7em;
	padding-bottom: .7em;
	width: 100%;
	border-top: 1px solid #e2af85;
}

.glossaryNames {
	font-family: Arial,Helvetica,sans-serif;
	color: #426b9c;
	display: inline;	
	/*)width: 100%;
	border-top: 1px solid #e2af85; */
	margin-top: 16px;
	padding-top: 12px;
	line-height: 1.5em;
}

.glossaryDef {
	font-family: Arial,Helvetica,sans-serif;
	color: #696969;
	display: inline;	
	margin-bottom: 12px;
	line-height: 1.5em;
}

