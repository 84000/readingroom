}

.popupPanel {
	position: relative;
	display: inline;
	background: #FFFFFF;	
	border-top-left-radius: .75em;
	border-top-right-radius: .75em;
	border-bottom-left-radius: .75em;
	border-bottom-right-radius: .75em;
