.desc {
	color: #AAAAAA;
	font-family: Georgia,"Times New Roman",Times,serif; /* 16px */
	line-height: 1.3em;
	padding: 5% 0 8%;
}

.h2 {
	color: #426b9c;
	padding: .5em 0;
	border-bottom: 1px solid #e2af85;
	font-family: Arial,Helvetica,sans-serif;
}

.h2_en {
	font-size: 1.75em;
	font-weight: bold;
}

.h2_sa {
	font-family: Georgia,"Times New Roman",Times,serif;
	font-size: 1.3em;
	line-height: 1.8em; /* 24px */
	hyphens: auto;
}

.h2_bo {
	font-family: Georgia,"Times New Roman",Times,serif;
	font-size: 1.3em;
	line-height: 1.8em; /* 24px */
	hyphens: auto;
	font-style: italic;
}
