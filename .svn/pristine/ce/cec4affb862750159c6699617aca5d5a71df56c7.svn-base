<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:my="urn:import:org.tbrc.readingroom.client">

	<g:HTMLPanel ui:field="wrapperPanel" width="100%">
		<!-- Header w/logo & title -->
		<my:TextHeader ui:field="header"/>

		<!-- FLoating info/nav panel -->
		<g:Button ui:field="infoButton" styleName="textInfoButton">&#xED50;</g:Button>
		<my:PopupNavPanel ui:field="navPanel" visible="false"/>

		<!-- Content panel -->
		<g:DeckPanel ui:field="textDeckPanel">
			<!-- Text pages (TextPage instances) will go here -->
		</g:DeckPanel>
	</g:HTMLPanel>
</ui:UiBinder>