.orangeBackground { background-color: #cf7a34; }
*/
.redBackground { background-color: #892629; }
.transparentBackground { background-color: Transparent; }

/** Main-page features */
.background {
	background-image: url("background-pattern.png");
}

.header {
	width: 100%;
	margin: 0px 0px 0px 0px;
	background-color: #FFFFFF;
}
 
.navBar {
	width: 100%;
	margin: 0px 0px 0px 0px;
	background-color: #CCCCCC;
}

.navBarButton {
    background: #CCCCCC;
    color: #444444;
	font-family: 'Trade Gothic W02 Bold';
    font-size: 18px;
    padding-left: 15px;
    padding-right: 15px;
    height: 40px;
    margin: 0px 0px;
    text-align: center;
    border: 0;
    transition: all 0.3s ease 0s;
}

.navBarButton:hover {
	background: #426B9C;
	color: #FFFFFF;
}

.learnMoreButton
{
	margin: 10;
	padding: 8px 15px 8px 15px;
	font-family: 'Trade Gothic W02 Roman';
    font-size: 14px;
	white-space: pre;
	background-color: #426b9c;
	color: #FFFFFF;
	border:none;
	outline-style: none;
	border-radius: 6px;
}

.catalogButton
{
	margin: 10;
	padding: 8px 15px 8px 15px;
	font-family: 'Trade Gothic W02 Roman';
    font-size: 14px;
	white-space: pre;
	background-color: #f5e4d6;
	color: #426b9c;
	border:none;
	outline-style: none;
	border-radius: 6px;
}

.mainPage {
	width: 94%;
	background-color: #fff;
	margin: 50px auto;
	padding: 0;
    box-shadow: 0px 4px 25px #777;
}

.sendButton {
	display: block;
	font-size: 16pt;
}

.serverResponseLabelError {
	color: red;
}

.titleSmall  { padding: 0; }
.titleMedium { padding: 0; }
.titleLarge  { margin: 2.0em 3.0% 0px 3.0%; padding-top: 30px; }

.titleFontSmall  { font-size: 18pt; }
.titleFontMedium { font-size: 24pt; }
.titleFontLarge  { font-size: 32pt; }
