.section {
	text-align: center;
	padding: 2em 0 0 0;
	margin-bottom: 1em;
	background:
		url(images/section-ornament.svg) no-repeat top center,
		url(images/section-corner-left.svg) no-repeat top left,
		url(images/section-corner-right.svg) no-repeat top right,
		url(images/section-top.svg) repeat-x top center,
		url(images/section-sides.svg) repeat-y top left,
		url(images/section-sides.svg) repeat-y top right;
	background-size:
		50px,
		18px,
		18px,
		50px,
		6px,
		6px;
	background-color: #fff;
}

.table {
	border-bottom-left-radius: .75em;
	border-bottom-right-radius: .75em;
}

.tableTexts {
	font-family: Arial,Helvetica,sans-serif;
	font-size: 1.0em;
	color: #fff;
	background: #cf7a34;
	line-height: 1.8em; /* 24px */
	width: 100%;
}

.tableType { text-align: left; }
.tableCount { text-align: right; }
.tableUnderscore { border-bottom: 1px solid #994c2d; }

/*****************************/

.mainFont {
	/* font-family: 'Oswald', sans-serif;
    letter-spacing: 1px;
	font-weight: 400; */
	font-family: 'Trade Gothic W02 Roman';
	color: #818181;
	font-size: 14pt;
	text-align: center;
}

.subtitleFont {
	font-family: Georgia, Serif;
	font-size: 12pt;
	color: #444444;
}

.bigTitleFont {
	font-family: 'Trade Gothic W02 Bold';
	font-size: 32pt;
	text-align: left;
	color: #FFFFFF;
	margin: 20px 10px 20px 20px;
}

.bigTitleTFont {
	font-family: Georgia, Serif;
	font-size: 36pt;
	text-align: left;
	color: #FFFFFF;
	margin: 14px auto 0px 10px;
}

.itemTitleFont {
	font-family: "Arial", Serif;
	font-weight: bold;
	font-size: 17pt;
	text-align: center;
	color: #426b9c;
    border: 0;
    background: #FFFFFF;
	margin: 5px 1px 1px 1px;
}
.itemTitleFont:hover {
	color: #892629;
}
.itemTitleFont:focus {
    outline: 0;
}

.itemSubTitleFont {
	font-family: "Georgia", Serif;
	font-style: italic;
	font-size: 13pt;
	text-align: center;
	color: #426b9c;
    border: 0;
    background: #FFFFFF;
	margin: 1px auto 1px auto;
}
.itemSubTitleFont:hover {
	color: #892629;
}
.itemSubTitleFont:focus {
    outline: 0;
}

.itemDescFont {
	font-family: "Georgia", Serif;
	font-size: 10pt;
	text-align: center;
	line-height: 140%;
	color: #888888;
    border: 0;
	background-color: Transparent;
	margin: 4px auto 1px auto;
}
.itemDescFont:hover {
	color: #222222;
}
.itemDescFont:focus {
    outline: 0;
}

.itemStatsFont {
	font-family: 'Trade Gothic W02 Roman';
	color: #FFFFFF;
	font-size: 11pt;
	text-align: left;
}

.alignRight { text-align: right; }
.alignLeft  { text-align: left;  }
.halfWidth { width: 50%; }

.catalog {
	padding: 2.0%; /* 320/12 */
	background: #f5e4d6;
	border-radius: .75em;
	width: 48%;
	max-width: 75em; /* 1200px */
	min-width: 25em; /* 400px */
	margin-bottom: 20px;
}

.catalogDesc {
	margin: 6px auto 1px 20px;
	text-align: left;
}

.catalogTitle {
	text-align: left;
	font-size: 15pt;
	background-color: Transparent;
}

/** Standard colors across system */
/*
