*/

.mainFont {
	/* font-family: 'Oswald', sans-serif;
    letter-spacing: 1px;
	font-weight: 400; */
	font-family: 'Trade Gothic W02 Roman';
	color: #818181;
	font-size: 14pt;
	text-align: center;
}

.subtitleFont {
	font-family: Georgia, Serif;
	font-size: 12pt;
	color: #444444;
}

.bigTitleFont {
	/* font-family: 'Oswald', sans-serif;
	font-weight: 400;
    letter-spacing: 1px; */
	font-family: 'Trade Gothic W02 Bold';
	font-size: 32pt;
	text-align: left;
	color: #FFFFFF;
	margin: 20px 10px 20px 20px;
}

.bigTitleTFont {
	font-family: Georgia, Serif;
	font-size: 36pt;
	text-align: left;
	color: #FFFFFF;
	margin: 10px auto 0px 10px;
}

.itemTitleFont {
	font-family: "Arial", Serif;
	font-weight: bold;
	font-size: 17pt;
	text-align: center;
	color: #426b9c;
	/* margin: 10px auto 0px 10px; */
    border: 0;
    background: #FFFFFF;
	margin: 5px 1px 1px 1px;
}
.itemTitleFont:hover {
	color: #892629;
}
.itemTitleFont:focus {
    outline: 0;
}

.itemSubTitleFont {
	font-family: "Georgia", Serif;
	font-style: italic;
	font-size: 13pt;
	text-align: center;
	color: #426b9c;
	/* margin: 10px auto 0px 10px; */
    border: 0;
    background: #FFFFFF;
	margin: 1px auto 1px auto;
}
.itemSubTitleFont:hover {
	color: #892629;
}
.itemSubTitleFont:focus {
    outline: 0;
}


.itemDescFont {
	font-family: "Georgia", Serif;
	font-size: 10pt;
	text-align: center;
	line-height: 140%;
	color: #888888;
    border: 0;
	background-color: Transparent;
	margin: 4px auto 1px auto;
}
.itemDescFont:hover {
	color: #222222;
}
.itemDescFont:focus {
    outline: 0;
}

.itemStatsFont {
	font-family: 'Trade Gothic W02 Roman';
	color: #FFFFFF;
	font-size: 11pt;
	text-align: left;
}

.alignRight {
	text-align: right;
}

.catalogDesc {
	margin: 6px auto 1px 20px;
	text-align: left;
}

.catalogTitle {
	text-align: left;
	font-size: 15pt;
	background-color: Transparent;
}

/** Standard colors across system */
.tealColor { color: #426b9c; }
.orangeColor { color: #cf7a34; }
.redColor {	color: #892629; }
.blackColor { color: #000000; }
.greyColor { color: #666666; }
.whiteColor { color: #FFFFFF; }

.tealBackground { background-color: #426b9c; }
.orangeBackground { background-color: #cf7a34; }
.redBackground { background-color: #892629; }
.blackBackground { background-color: #000000; }
.greyBackground { background-color: #666666; }
.whiteBackground { background-color: #FFFFFF; }
.transparentBackground { background-color: Transparent; }

